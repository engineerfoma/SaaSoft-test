{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["./app/*"],
      "@/shared/*": ["./shared/*"],
      "@/entities/*": ["./entities/*"],
      "@/features/*": ["./features/*"],
      "@/widgets/*": ["./widgets/*"],
      "@/pages/*": ["./pages/*"]
    }
  },
  "include": ["main.ts", "App.vue", "app/**/*.ts", "app/**/*.d.ts", "app/**/*.tsx", "app/**/*.vue", "shared/**/*.ts", "shared/**/*.d.ts", "shared/**/*.tsx", "shared/**/*.vue", "entities/**/*.ts", "entities/**/*.d.ts", "entities/**/*.tsx", "entities/**/*.vue", "features/**/*.ts", "features/**/*.d.ts", "features/**/*.tsx", "features/**/*.vue", "widgets/**/*.ts", "widgets/**/*.d.ts", "widgets/**/*.tsx", "widgets/**/*.vue", "pages/**/*.ts", "pages/**/*.d.ts", "pages/**/*.tsx", "pages/**/*.vue", "shared/types/**/*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
